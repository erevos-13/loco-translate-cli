{
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "tabWidth": 2,
    "printWidth": 100,
    "arrowParens": "avoid",
    "bracketSpacing": true,
    "endOfLine": "lf",
    "overrides": [
        {
            "files": [
                "*.js",
                "*.cjs",
                "*.mjs"
            ],
            "options": {
                "parser": "babel"
            }
        },
        {
            "files": "*.json",
            "options": {
                "parser": "json"
            }
        }
    ]
}